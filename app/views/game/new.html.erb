<ul id="grid">
  <% @grid.each do |letter| %>
  <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<form action="/score">
  <input type="text" name="answer">
  <input type="submit" value="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
</form>
